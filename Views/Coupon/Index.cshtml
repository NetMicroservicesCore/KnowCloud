@model IEnumerable<KnowCloud.Models.Dto.CouponDto>

@section Styles {
	<link href="~/css/cuopon-style.css" rel="stylesheet" />
}
<div class="container py-5">
    <div class="card shadow">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="text-white mb-0">Lista de Cupones</h2>
                </div>
                <div class="col-md-6 text-md-end mt-3 mt-md-0">
                    <a asp-action="Create" asp-controller="Coupon" class="btn btn-create">
                        <i class="bi bi-plus-circle me-2"></i>Nuevo Cupón
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-state">
                    <i class="bi bi-ticket-perforated"></i>
                    <h4>No hay cupones disponibles</h4>
                    <p>Crea nuevos cupones para promocionar tus productos</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Código de Cupón</th>
                                <th>Descuento</th>
                                <th>Monto Mínimo</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="coupon-code">
                                        <i class="bi bi-ticket-perforated me-2"></i>@item.CouponCode
                                    </td>
                                    <td class="discount-amount">
                                        @((item.DiscountAmount).ToString("c"))
                                    </td>
                                    <td>
                                        @((item.MinAmount).ToString("c"))
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="CouponEdit" asp-route-couponId="@item.CouponId" class="btn btn-sm btn-create me-2">
                                                <i class="far fa-edit"></i>
                                            </a>
                                            <a asp-action="CouponDelete" asp-route-couponId="@item.CouponId" class="btn btn-sm btn-delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>