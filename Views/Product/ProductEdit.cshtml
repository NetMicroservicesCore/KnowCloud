@model KnowCloud.Models.Dto.ProductDto

<form asp-action="ProductEdit" enctype="multipart/form-data">
    <div class="container mt-5 p-4 rounded shadow-lg" style="background-color: #5a189a;">
        <h2 class="text-center text-white mb-4">Edit Product</h2>
        <input type="hidden" asp-for="ProductId" />

        <div class="row">
            <div class="col-md-10">

                <!-- Name -->
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-white fs-5">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-warning small"></span>
                    </div>
                </div>

                <!-- Category -->
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-white fs-5">Category</label>
                    <div class="col-sm-10">
                        <input asp-for="CategoryName" class="form-control" placeholder="Enter category" />
                        <span asp-validation-for="CategoryName" class="text-warning small"></span>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-white fs-5">Description</label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter description..."></textarea>
                        <span asp-validation-for="Description" class="text-warning small"></span>
                    </div>
                </div>

                <!-- Price -->
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-white fs-5">Price</label>
                    <div class="col-sm-10">
                        <input asp-for="Price" class="form-control" placeholder="e.g. 19.99" />
                        <span asp-validation-for="Price" class="text-warning small"></span>
                    </div>
                </div>

                <!-- Image Upload -->
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-white fs-5">Image</label>
                    <div class="col-sm-10">
                        <input asp-for="Image" type="file" class="form-control" />
                        <input asp-for="ImageUrl" type="hidden" />
                        <input asp-for="ImageLocalPath" type="hidden" />
                        <span asp-validation-for="Image" class="text-warning small"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <a asp-action="ProductIndex" class="btn form-control text-white" style="background-color: #C14600;">
                            ⬅ Back to List
                        </a>
                    </div>
                    <div class="col-md-6">
                        <button type="submit" class="btn form-control text-white" style="background-color: #00b894;">
                            ✅ Update Product
                        </button>
                    </div>
                </div>
            </div>

            <!-- Product Image Preview -->
            <div class="col-md-2 text-center">
                <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded border mt-3" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
