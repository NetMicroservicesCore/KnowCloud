@model KnowCloud.Models.Dto.ProductDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
     <link href="~/css/product-style.css" rel="stylesheet" />
}
<div class="product-form-container">
    <h2 class="product-form-title">Crear Nuevo Producto</h2>
    
    <form asp-action="ProductCreate" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="form-label">Nombre del Producto</label>
            <input asp-for="Name" class="form-control form-control-sm" placeholder="Ingrese el nombre del producto">
            <span asp-validation-for="Name" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoryName" class="form-label">Categoría</label>
            <input asp-for="CategoryName" class="form-control form-control-sm" placeholder="Seleccione una categoría">
            <span asp-validation-for="CategoryName" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control form-control-sm" placeholder="Describa el producto detalladamente"></textarea>
            <span asp-validation-for="Description" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="form-label">Precio</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input asp-for="Price" class="form-control form-control-sm w-75" placeholder="0.00" type="number" step="0.01" min="0">
            </div>
            <span asp-validation-for="Price" class="validation-message"></span>
        </div>

        <div class="form-group">
            <label asp-for="Image" class="form-label">Imagen del Producto</label>
            <div class="file-input-container">
                <input asp-for="Image" class="form-control form-control-sm" type="file" accept="image/*">
                <input asp-for="ImageUrl" hidden>
            </div>
            <span asp-validation-for="Image" class="validation-message"></span>
        </div>

        <div class="form-actions">
            <a asp-action="ProductIndex" class="btn btn-primary">Volver al Listado</a>
            <button type="submit" class="btn btn-submit">Crear Producto</button>
        </div>
    </form>
</div>
<script>
    //solo falta cargar la validacion del documento  para cuando este ready y se pueda trabajar con el jquery
    // Script para mostrar el nombre del archivo seleccionado
    document.querySelector('input[type="file"]').addEventListener('change', function(e) {
        const fileName = e.target.files[0]?.name || 'Ningún archivo seleccionado';
        const fileInputLabel = this.nextElementSibling;
        if(fileInputLabel && fileInputLabel.classList.contains('file-input-label')) {
            const fileNameElement = fileInputLabel.querySelector('.file-name');
            if(fileNameElement) {
                fileNameElement.textContent = fileName;
            }
        }
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}