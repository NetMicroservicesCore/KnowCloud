@model KnowCloud.Models.Dto.LoginRequestDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-custom {
        background-color: #5a189a !important;
        color: white !important;
        transition: all 0.3s ease;
        border: none;
        font-weight: 500;
    }

    .btn-custom:hover {
        background-color: #C14600 !important;
        color: white !important;
    }

    .login-card {
        border-radius: 10px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .login-icon {
        margin-right: 8px;
        color: #5a189a;
    }

    .title-morado {
        color: #5a189a;
        font-weight: bold;
    }

    .form-control:focus {
        border-color: #5a189a;
        box-shadow: 0 0 0 0.25rem rgba(90, 24, 154, 0.25);
    }

    .checkbox-custom {
        accent-color: #5a189a;
    }

    .login-header {
        padding-bottom: 15px;
        border-bottom: 2px solid #f3f3f3;
        margin-bottom: 20px;
    }

    .form-label {
        margin-bottom: 5px;
    }

    .forgot-password {
        color: #5a189a;
        text-decoration: none;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .forgot-password:hover {
        color: #C14600;
        text-decoration: underline;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card login-card p-4">
                <div class="login-header">
                    <h3 class="title-morado roboto-ExtraBold-800">
                        <i class="fas fa-users login-icon"></i>
                        Iniciar Sesión
                    </h3>
                    <p class="text-muted roboto-thin-ExtraLight-200 mb-0">Ingresa tus credenciales para acceder al sistema</p>
                </div>

                <div class="card-body pt-2">
                    <form id="frmForm" method="post">
                        <div class="mb-3">
                            <label for="UserName" class="form-label title-morado roboto-thin-ExtraLight-200">
                                <i class="fas fa-user-alt login-icon"></i>
                                Nombre de Usuario
                            </label>
                            <input type="text" asp-for="UserName" class="form-control" placeholder="Nombre de Usuario ó Email" required maxlength="100" />
                            <span asp-validaton-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="Password" class="form-label title-morado roboto-thin-ExtraLight-200">
                                <i class="fas fa-lock login-icon"></i>
                                Contraseña
                            </label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Tu Contraseña" required maxlength="100" />
                            <span asp-validaton-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input checkbox-custom" id="rememberMe" />
                                <label class="form-check-label title-morado roboto-thin-ExtraLight-200" for="rememberMe">
                                    Recordarme
                                </label>
                            </div>
                            <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-custom px-4 py-2">
                                <i class="fas fa-sign-in-alt me-2"></i>Ingresar
                            </button>
                        </div>

                        <div class="mt-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted">¿No tienes cuenta? <a href="#" class="forgot-password">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>